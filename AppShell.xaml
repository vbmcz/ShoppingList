<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShoppingList.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShoppingList"
    xmlns:views="clr-namespace:ShoppingList.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ShoppingList">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Categories"
            ContentTemplate="{DataTemplate views:CategoriesPage}"
            Route="Views.CategoriesPage"/>

        <ShellContent
            Title="StoreReady"
            ContentTemplate="{DataTemplate views:ForStorePage}"
            Route="Views.ForStorePage"/>
    </TabBar>

</Shell>
