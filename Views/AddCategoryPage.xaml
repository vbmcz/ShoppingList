<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.Views.AddCategoryPage"
             Title="AddCategoryPage">
    <VerticalStackLayout>
        <Entry
            Placeholder="Set category name"
            x:Name="CategoryNameEntry"/>

        <Button
            Text="Add category"
            Clicked="Add_Clicked"/>

        <Label
            x:Name="ErrorLabel"
            TextColor="Red"/>

    </VerticalStackLayout>
</ContentPage>